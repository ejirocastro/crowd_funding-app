
{
  "name": "stacks-crowdfunding-platform",
  "version": "1.0.0",
  "description": "A secure, decentralized crowdfunding platform built on Stacks blockchain with goal-based funding, platform fees, and comprehensive admin controls.",
  "type": "module",
  "private": false,
  "keywords": ["stacks", "blockchain", "crowdfunding", "clarity", "smart-contracts", "bitcoin", "defi"],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "clarinet test --coverage",
    "test:gas": "clarinet test --costs",
    "test:performance": "clarinet test --performance",
    "test:report": "vitest run -- --coverage --costs",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "deploy:devnet": "node scripts/deploy.js devnet",
    "deploy:testnet": "node scripts/deploy.js testnet",
    "deploy:mainnet": "node scripts/deploy.js mainnet",
    "verify:testnet": "node scripts/verify.js testnet",
    "verify:mainnet": "node scripts/verify.js mainnet",
    "initialize:testnet": "node scripts/initialize.js testnet",
    "initialize:mainnet": "node scripts/initialize.js mainnet",
    "security:audit": "npm audit --audit-level high",
    "security:full": "npm run security:audit && clarinet check --enable-hints",
    "docs:generate": "node scripts/generate-docs.js",
    "analyze:gas": "clarinet costs",
    "analyze:dependencies": "npm ls --depth=0",
    "clean": "rm -rf node_modules coverage .clarinet/cache",
    "prepare": "npm run lint && npm run test",
    "start:devnet": "clarinet integrate",
    "build": "tsc --noEmit && npm run lint"
  },
  "author": "Stacks Developer Team",
  "license": "MIT",
  "dependencies": {
    "@hirosystems/clarinet-sdk": "^3.0.2",
    "@stacks/transactions": "^7.0.6",
    "@stacks/network": "^7.0.6",
    "chokidar-cli": "^3.0.0",
    "vitest": "^3.1.3",
    "vitest-environment-clarinet": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "c8": "^8.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/stacks-crowdfunding-platform.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/stacks-crowdfunding-platform/issues"
  },
  "homepage": "https://github.com/your-username/stacks-crowdfunding-platform#readme"
}
